@code {
    private bool showPassword = false;
    private bool invaild = false;
    private string ErrorMessage { get; set; } = "";
    [SupplyParameterFromForm]
    public SignInModel loginModel { get; set; } = new SignInModel();

    [CascadingParameter]
    public HttpContext? HttpContext { get; set; }

    private void TogglePasswordVisibility() => showPassword = !showPassword;

    private async Task HandleLogin()
    {
        var user = await _IUser.Login(loginModel.Username, loginModel.Password);
        var flag = _IPasswordHasherRepository.VerifyPassword(loginModel.Password, user.Password);

        if (user is null || !flag || user.UID == 0)
        {
            ErrorMessage = "Invalid Username or Password. Please try again.";
            invaild = true;
            return;
        }

        var claims = new List<Claim>
        {
            new Claim(ClaimTypes.Name, user.LoginName),
            new Claim(ClaimTypes.NameIdentifier, user.UID.ToString()),
            new Claim(ClaimTypes.Role, user.Role),
            new Claim(ClaimTypes.Email, user.Email),
        };

        var identity = new ClaimsIdentity(claims, CookieAuthenticationDefaults.AuthenticationScheme);
        var principal = new ClaimsPrincipal(identity);

        try
        {
            await HttpContext.SignInAsync(
                CookieAuthenticationDefaults.AuthenticationScheme,
                principal,
                new AuthenticationProperties
                    {
                        IsPersistent = true,
                        ExpiresUtc = DateTime.Now.AddMinutes(420)
                    });
        }
        catch (Exception ex)
        {
            await JS.ToastrError("Failed to sign in. Please try again!");
            ErrorMessage = "Something went wrong. Please try again!" + ex.InnerException;
            invaild = true;
            return;
        }

        await log.CreateSystemLogAsync($"{user.LoginName} Sign In In The System", "APP USER", user.UID);
        Navigation.NavigateTo("/dashboard", forceLoad: true);
    }
}
