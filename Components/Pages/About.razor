<style>
    /* About Page Variables */
    :root {
        --primary: #4a6bff;
        --primary-light: rgba(74, 107, 255, 0.1);
        --secondary: #6c757d;
        --dark: #2c3e50;
        --light: #f8f9fa;
        --white: #ffffff;
        --gradient: linear-gradient(135deg, var(--primary), #6a11cb);
        --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        --transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
    }

    /* Base Styles */
    .about-page {
        font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        color: var(--dark);
        line-height: 1.6;
        overflow-x: hidden;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    /* Hero Section */
    .about-hero {
        position: relative;
        height: 60vh;
        min-height: 400px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        background: var(--gradient);
        color: var(--white);
        overflow: hidden;
        padding-top: 80px;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 0 20px;
    }

    .hero-title {
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 800;
        margin-bottom: 1rem;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }

    .hero-subtitle {
        font-size: clamp(1.1rem, 2vw, 1.5rem);
        opacity: 0.9;
        max-width: 700px;
        margin: 0 auto;
    }

    .hero-waves {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100px;
    }

        .hero-waves svg {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }

        .hero-waves path {
            fill: var(--white);
        }

    /* Features Section */
    .about-features {
        padding: 100px 0;
        background: var(--white);
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

        .section-header h2 {
            font-size: clamp(1.8rem, 3vw, 2.5rem);
            color: var(--primary);
            margin-bottom: 1rem;
        }

        .section-header p {
            font-size: 1.1rem;
            color: var(--secondary);
            max-width: 700px;
            margin: 0 auto;
        }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
    }

    .feature-card {
        background: var(--white);
        border-radius: 15px;
        padding: 40px 30px;
        text-align: center;
        box-shadow: var(--shadow);
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(74, 107, 255, 0.15);
    }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 25px;
        background: var(--primary-light);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: var(--primary);
        transition: var(--transition);
    }

    .feature-card:hover .feature-icon {
        background: var(--primary);
        color: var(--white);
    }

    .feature-card h3 {
        font-size: 1.4rem;
        margin-bottom: 15px;
        color: var(--dark);
    }

    .feature-card p {
        color: var(--secondary);
        margin-bottom: 20px;
    }

    .feature-wave {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: var(--primary);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.6s cubic-bezier(0.65, 0, 0.35, 1);
    }

    .feature-card:hover .feature-wave {
        transform: scaleX(1);
    }

    /* Story Section */
    .about-story {
        padding: 100px 0;
        background: var(--light);
    }

    .story-content {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 50px;
    }

    .story-text {
        flex: 1;
        min-width: 300px;
    }

        .story-text h2 {
            font-size: clamp(1.8rem, 3vw, 2.5rem);
            color: var(--primary);
            margin-bottom: 1.5rem;
        }

        .story-text p {
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
            line-height: 1.8;
        }

    .story-stats {
        display: flex;
        gap: 30px;
        margin-top: 40px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 5px;
    }

    .stat-label {
        color: var(--secondary);
        font-size: 0.9rem;
    }

    .story-image {
        flex: 1;
        min-width: 300px;
        position: relative;
    }

    .image-wrapper {
        position: relative;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: var(--shadow);
    }

        .image-wrapper img {
            width: 100%;
            height: auto;
            display: block;
        }

    .image-highlight {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, rgba(74, 107, 255, 0.3), transparent);
        z-index: 1;
    }

    /* Technology Section */
    .about-tech {
        padding: 100px 0;
        background: var(--white);
    }

    .tech-grid {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        max-width: 800px;
        margin: 0 auto;
    }

    .tech-item {
        width: 100px;
        height: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: var(--white);
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: var(--transition);
    }

        .tech-item:hover {
            transform: translateY(-10px) scale(1.05);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .tech-item img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
            object-fit: contain;
        }

        .tech-item span {
            font-size: 0.9rem;
            font-weight: 500;
            color: var(--dark);
        }

    /* Animations */
    @@keyframes pulse {
        0%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.1);
    }

    100% {
        transform: scale(1);
    }

