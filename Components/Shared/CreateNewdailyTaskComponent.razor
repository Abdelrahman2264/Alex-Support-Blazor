@attribute [Authorize(Roles = "Admin")]

<div class="modal fade align-content-center" id="AddTask" tabindex="-1" aria-labelledby="assignTicketModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-fullscreen-sm-down">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-3 p-sm-4">
                <EditForm Model="ticket" OnSubmit="ConfirmationClicked">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="alert alert-danger mb-3" />

                    <!-- Comment Field -->
                    <div class="mb-3 mb-sm-4">
                        <label class="form-label">Subject</label>
                        <InputText @bind-Value="ticket.Subject"
                                   class="form-control"
                                   required />
                        <ValidationMessage For="@(() => ticket.Subject)" class="text-danger" />
                        <div class="form-text small">Enter Your Subject about this ticket</div>
                    </div>
                    <div class="mb-3 mb-sm-4">
                        <label class="form-label">Issue Description</label>
                        <InputTextArea @bind-Value="ticket.Issue"
                                   class="form-control"
                                   required 
                                   style="max-height:200px"/>
                        <ValidationMessage For="@(() => ticket.Issue)" class="text-danger" />
                        <div class="form-text small">Enter Your Description about this ticket</div>
                    </div>
                    <div class="mb-3 mb-sm-4">
                        <label class="form-label">Expected Time In Minitues</label>
                        <InputNumber @bind-Value="ticket.Due_Minutes"
                                   class="form-control"
                                   required />
                        <ValidationMessage For="@(() => ticket.Due_Minutes)" class="text-danger" />
                        <div class="form-text small">Enter Expected Time in Minitues for this ticket</div>
                    </div>
                     <div class="mb-3 mb-sm-4">
                        <label class="form-label">Priority</label>
                        <InputSelect @bind-Value="ticket.Priority" class="form-control" id="priority" >
                            <option value="0">Select Priority</option>
                            <option value="Low">Low</option>
                            <option value="Medium">Medium</option>
                            <option value="High">High</option>
                            <option value="Urgent">Urgent</option>
                        </InputSelect>
                        <ValidationMessage For="@(() => ticket.Priority)" class="text-danger" />
                        <div class="form-text small">Select Ticket Priority</div>
                    </div>    
                    <div class="mb-3 mb-sm-4">
                        <label class="form-label">Expected Time In Minitues</label>
                        <InputSelect @bind-Value="ticket.CategoryID" class="form-control" id="category">
                            <option value="">Select Category</option>
                            @foreach (var category in Category)
                            {
                                <option value="@category.CID">@category.CategoryName</option>
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => ticket.CategoryID)" class="validation-message" />
                        <div class="form-text small">Select Ticket Category</div>
                    </div>

                    <div class="modal-footer border-top-0 pt-0">
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary btn-sm" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            Submit
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<style>
    /* Base Styling */
    .modal-content {
        border-radius: 0.5rem;
    }



    /* Tablet and Larger Screens */
    @@media (min-width: 576px) {

        .modal-footer button {
            font-size: 1rem;
            padding: 0.375rem 0.75rem;
        }
    }

    /* Small Phones (under 400px) */
    @@media (max-width: 400px) {
        .modal-body {
            padding: 1rem 0.75rem;
        }

        .modal-footer {
            padding: 0.75rem;
        }

            .modal-footer button {
                font-size: 0.875rem;
                padding: 0.25rem 0.5rem;
            }
    }

    /* Very Small Phones (under 350px) */
    @@media (max-width: 350px) {


        .form-text, .status-description, .text-danger {
            font-size: 0.65rem;
        }
    }
</style>

@code {
    private bool isSubmitting = false;

    [Parameter]
    public string Title { get; set; } = "Add Solution";

    [Parameter]
    public DailyTasks ticket { get; set; } = new DailyTasks();
    [Parameter]
    public IEnumerable<Category> Category { get; set; } = new List<Category>();

    [Parameter]
    public EventCallback<DailyTasks> OnModalConfirmation { get; set; }

    private async Task ConfirmationClicked()
    {
        isSubmitting = true;
        try
        {
            await OnModalConfirmation.InvokeAsync(ticket);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}