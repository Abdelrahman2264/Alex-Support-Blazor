@attribute [Authorize(Roles = "Admin")]

<div class="modal fade align-content-center" id="AddTask" tabindex="-1" aria-labelledby="assignTicketModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-gradient-primary text-white py-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-tasks fa-lg me-2"></i>
                    <h5 class="modal-title mb-0">@Title</h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <EditForm Model="ticket" OnSubmit="ConfirmationClicked">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="alert alert-danger mb-4 animated fadeIn" />

                    <div class="row g-4">
                        <!-- Left Column -->
                        <div class="col-md-6">
                            <!-- Subject Field -->
                            <div class="form-floating mb-3">
                                <InputText @bind-Value="ticket.Subject"
                                           class="form-control"
                                           id="subjectInput"
                                           placeholder=" "
                                           required />
                                <label for="subjectInput" class="text-muted">
                                    <i class="fas fa-heading me-2"></i>Subject
                                </label>
                                <ValidationMessage For="@(() => ticket.Subject)" class="text-danger small animated fadeIn" />
                                <div class="form-text ps-4">
                                    <i class="fas fa-info-circle me-1"></i>Enter your subject about this ticket
                                </div>
                            </div>

                            <!-- Issue Description -->
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-align-left me-2"></i>Issue Description
                                </label>
                                <InputTextArea @bind-Value="ticket.Issue"
                                               class="form-control styled-textarea"
                                               placeholder="Describe the issue..."
                                               required />
                                <ValidationMessage For="@(() => ticket.Issue)" class="text-danger small animated fadeIn" />
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>Detailed description helps us resolve faster
                                </div>
                            </div>

                            <!-- Expected Time -->
                            <div class="form-floating mb-3">
                                <InputNumber @bind-Value="ticket.Due_Minutes"
                                             class="form-control"
                                             id="minutesInput"
                                             placeholder=" "
                                             required />
                                <label for="minutesInput" class="text-muted">
                                    <i class="fas fa-clock me-2"></i>Expected Time (Minutes)
                                </label>
                                <ValidationMessage For="@(() => ticket.Due_Minutes)" class="text-danger small animated fadeIn" />
                            </div>
                        </div>

                        <!-- Right Column -->
                        <div class="col-md-6">
                            <!-- Days to Repeat -->
                            <div class="form-floating mb-3">
                                <InputNumber @bind-Value="ticket.RecurrenceDays"
                                             class="form-control"
                                             id="repeatInput"
                                             placeholder=" "
                                             required />
                                <label for="repeatInput" class="text-muted">
                                    <i class="fas fa-sync-alt me-2"></i>Repeat Every (Days)
                                </label>
                                <ValidationMessage For="@(() => ticket.RecurrenceDays)" class="text-danger small animated fadeIn" />
                            </div>

                            <!-- Priority -->
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-exclamation-circle me-2"></i>Priority
                                </label>
                                <InputSelect @bind-Value="ticket.Priority" class="form-select" id="priority">
                                    <option value="0">Select Priority</option>
                                    <option value="Low"><i class="fas fa-arrow-down text-success me-1"></i> Low</option>
                                    <option value="Medium"><i class="fas fa-equals text-warning me-1"></i> Medium</option>
                                    <option value="High"><i class="fas fa-arrow-up text-danger me-1"></i> High</option>
                                    <option value="Urgent"><i class="fas fa-bolt text-danger me-1"></i> Urgent</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => ticket.Priority)" class="text-danger small animated fadeIn" />
                            </div>

                            <!-- Category -->
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-tag me-2"></i>Category
                                </label>
                                <InputSelect @bind-Value="ticket.CategoryID" class="form-select" id="category">
                                    <option value="">Select Category</option>
                                    @foreach (var category in Category)
                                    {
                                        <option value="@category.CID">@category.CategoryName</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => ticket.CategoryID)" class="text-danger small animated fadeIn" />
                            </div>

                            <!-- Location -->
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-map-marker-alt me-2"></i>Location
                                </label>
                                <InputSelect @bind-Value="ticket.LocationId" class="form-select" id="location">
                                    <option value="">Select Location</option>
                                    @foreach (var location in Locations)
                                    {
                                        <option value="@location.LID">@location.LocationName</option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => ticket.LocationId)" class="text-danger small animated fadeIn" />
                            </div>

                            <!-- Agent -->
                            <div class="mb-3">
                                <label class="form-label text-muted">
                                    <i class="fas fa-user-tie me-2"></i>Responsible Agent
                                </label>
                                <InputSelect @bind-Value="ticket.AgentId" class="form-select" id="agent">
                                    <option value="">Select Agent</option>
                                    @foreach (var agent in Agents)
                                    {
                                        <option value="@agent.UID">
                                            <i class="fas fa-user me-1"></i> @agent.LoginName
                                        </option>
                                    }
                                </InputSelect>
                                <ValidationMessage For="@(() => ticket.AgentId)" class="text-danger small animated fadeIn" />
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer border-top-0 pt-4">
                        <button type="button"
                                class="btn btn-outline-secondary btn-hover-scale"
                                data-bs-dismiss="modal">
                            <i class="fas fa-times me-1"></i> Cancel
                        </button>
                        <button type="submit"
                                class="btn btn-primary btn-hover-scale btn-glow"
                                disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-1"></span>
                            }
                            else
                            {
                                <i class="fas fa-paper-plane me-1"></i>
                            }
                            Submit
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

<style>
    /* Font Awesome for icons */
    @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css');

    /* Base Styling */
    .modal-content {
        border-radius: 0.75rem;
        border: none;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .modal-header {
        background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
    }

    .form-floating label {
        padding-left: 2.5rem;
    }

    .form-floating .form-control {
        padding-left: 2.5rem;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
        padding: 0.5rem 1rem;
        border: 1px solid #e0e0e0;
        transition: all 0.3s;
    }

        .form-control:focus, .form-select:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
        }

    .styled-textarea {
        min-height: 120px;
        resize: vertical;
    }

    .form-label {
        font-weight: 500;
        color: #5a5c69;
    }

    .form-text {
        font-size: 0.75rem;
        color: #858796;
        margin-top: 0.25rem;
    }

    /* Icon styling */
    .form-floating > i, .form-label > i {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #b7b9cc;
        z-index: 5;
    }

    .form-label > i {
        left: 0;
        top: 1.8rem;
    }

    /* Button effects */
    .btn-hover-scale {
        transition: all 0.3s ease;
    }

        .btn-hover-scale:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

    .btn-glow {
        position: relative;
        overflow: hidden;
    }

        .btn-glow:after {
            content: '';
            position: absolute;
            top: -50%;
            left: -60%;
            width: 200%;
            height: 200%;
            background: rgba(255, 255, 255, 0.2);
            transform: rotate(30deg);
            transition: all 0.3s;
        }

        .btn-glow:hover:after {
            left: 100%;
        }

    /* Animations */
    .animated {
        animation-duration: 0.5s;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .fadeIn {
        animation-name: fadeIn;
    }

    /* Responsive adjustments */
    @@media (max-width: 767.98px) {
        .modal-dialog {
            margin: 1rem auto;
        }

        .col-md-6 {
            padding: 0;
        }

        .form-floating label {
            padding-left: 2rem;
        }

        .form-floating .form-control {
            padding-left: 2rem;
        }
    }

    /* Small devices */
    @@media (max-width: 576px) {
        .modal-body {
            padding: 1.5rem;
        }

        .form-control, .form-select {
            padding: 0.5rem;
        }

        .modal-footer button {
            padding: 0.5rem 1rem;
        }
    }
</style>

@code {
    private bool isSubmitting = false;

    [Parameter]
    public string Title { get; set; } = "Add Solution";

    [Parameter]
    public DailyTasks ticket { get; set; } = new DailyTasks();
    [Parameter]
    public IEnumerable<Category> Category { get; set; } = new List<Category>();
    [Parameter]
    public IEnumerable<AppUser> Agents { get; set; } = new List<AppUser>();
    [Parameter]
    public IEnumerable<Location> Locations { get; set; } = new List<Location>();

    [Parameter]
    public EventCallback<DailyTasks> OnModalConfirmation { get; set; }

    private async Task ConfirmationClicked()
    {
        isSubmitting = true;
        try
        {
            await OnModalConfirmation.InvokeAsync(ticket);
        }
        finally
        {
            isSubmitting = false;
        }
    }
}